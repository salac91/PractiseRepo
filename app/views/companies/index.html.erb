<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Company Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Company', new_company_path, class: 'btn btn-primary' %> <br><br>

<%= link_to "Back", :back, class: 'btn btn-default btn-sm' %>
