<%= javascript_include_tag "changeNf" %>

<%= form_for [ @user, @schedule ] do |f| %>
  <div class="form-group">
    <%= f.label :action %>
    <%= f.select :action, options_for_select(Schedule::ACTION_OPTIONS), {} ,:id => "actionSelect", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :hours %>
    <%= f.number_field :hours, :value => 0, :step => 0.5, :id => "hoursNf", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_select :date, class: 'form-control' %>
  </div>

   <%= f.submit "Add Schedule", class: 'btn btn-primary' %>

<% end %>
